include modules/mixins

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Document
    link(rel="stylesheet", href="css/style.min.css")
  body
    div(style='display: none')
      include ../build/img/sprite.svg
    header.header
      include modules/header
    main
      section.main-header
        .container
            h1.main-header__h1 New Automation Tool for Your Home
            p.main-header__text Lorem ipsum dolor sit amet, consectetur adipiscing elit. Faucibus tristique vulputate ultrices ut mauris tellus at. Posuere sollicitudin odio tellus elit.
            button.main-header__button(type="button") See Our Project
      section.desc
        .container
          h2.desc__h2 What we do to help our client grow in digital era,
          ul.desc__list
            li.desc__item
              picture
                source(srcset="img/card-1.webp" type="image/webp")
                img.desc__img.desc__img--1(src="img/card-1.png", alt="Bring Technology To Your Comfrotable Home")             
              +card('Bring Technology To Your Comfrotable Home', 'Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.')
            li.desc__item
              picture
                source(srcset="img/card-2.webp" type="image/webp")
                img.desc__img.desc__img--2(src="img/card-2.png", alt="Make Your business To Be Better Famous In Internet")
              +card('Make Your business To Be Better Famous In Internet', 'Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.')
            li.desc__item
              picture
                source(srcset="img/card-3.webp" type="image/webp")
                img.desc__img.desc__img--3(src="img/card-3.png", alt="Build Your Digital Product That Suitable For Your Need")
              +card('Build Your Digital Product That Suitable For Your Need', 'Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.')
      section.clients
        .container
          .clients__wrapper
            h2.clients__h2 Our Beloved Client
            p.clients__text Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam.
          table.clients__table
            tr.clients__tr
              th.clients__th LOGO CLIENT 1
              th.clients__th LOGO CLIENT 2
              th.clients__th LOGO CLIENT 3
              th.clients__th LOGO CLIENT 4
            tr.clients__tr.clients__tr--2
              th.clients__th LOGO CLIENT 5
              th.clients__th LOGO CLIENT 6
              th.clients__th LOGO CLIENT 7
              th.clients__th.clients__th--link More Client
      section.form-popup
        h2.visually-hidden Contact us
        include modules/form
      section.success
        .success__wrapper
          p.success__text Done
      footer.footer
        include modules/footer
    script(src="js/popup.js")
    script(src="js/validation.js")
    script(src="js/ajax.js")
